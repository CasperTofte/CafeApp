<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.caspertofte.toftebar.Main_activity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:src="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/logo" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_text"
        android:id="@+id/welcomeText"
        android:gravity="center"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:textSize="25dp" />

<LinearLayout
    android:id="@+id/button_groups"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true">

    <LinearLayout
        android:id="@+id/button_group1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_songs"
            android:text="@string/btn_song"
            android:layout_alignParentLeft="true"
            style="@style/btn_main"
            android:onClick="songServiceActivity" />
        <Button
            android:id="@+id/button_dessert"
            android:text="@string/btn_dessert"
            android:layout_alignParentRight="true"
            style="@style/btn_main"
            android:onClick="dessertActivity" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_group2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
        android:id="@+id/btn_map"
        android:text="@string/btn_map"
        android:layout_alignParentLeft="true"
        style="@style/btn_main"
        android:onClick="mapActivity" />
        <Button
            android:id="@+id/button_drinks"
            android:text="@string/btn_drinks"
            android:layout_alignParentRight="true"
            android:onClick="drinksActivity"
            style="@style/btn_main"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_group3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_event"
            android:text="@string/btn_event"
            android:layout_alignParentLeft="true"
            style="@style/btn_main"
            android:onClick="eventActivity"
            />
        <Button
            android:id="@+id/btn_profile"
            android:text="@string/btn_profile"
            android:layout_alignParentRight="true"
            style="@style/btn_main"
            android:onClick="profileActivity" />
    </LinearLayout>

</LinearLayout>

</RelativeLayout>
